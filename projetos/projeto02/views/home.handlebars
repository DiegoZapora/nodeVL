<style>

    * {
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        font-family: 'Courier New', Courier, monospace;
    }

    body {
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        text-align: center;
        background-color: rgba(137, 43, 226, 0.582);
        overflow-x: hidden;
    }

    section h1 {
        color: red;
        font-weight: bolder;
    }

    section {
        border: 5px solid red;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 5px;
        background-color: white;
    }

    p {
        color: blue;
        font-weight: lighter;
    }

    button {
        margin-bottom: 5px;
        padding: 3px;
    }

</style>

<h1>Lista de Postagens: </h1>

{{#each posts}}

    <main class="main">
        <section class="container">
            <h1 class="po">{{titulo}}</h1>
            <p class="po">{{conteudo}}</p>
            <p>Postagem numero: {{id}}</p>
        </section>
    </main>

{{/each}}
