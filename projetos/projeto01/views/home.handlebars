<style>

    * {
        margin: 0px;
        padding: 0px;
        font-family: 'Courier New', Courier, monospace;
    }

    body {
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        text-align: center;
        flex-wrap: wrap;
    }

    section h1 {
        color: red;
        font-weight: bolder;
    }

    p {
        color: blue;
        font-weight: lighter;
    }

    button {
        margin-bottom: 5px;
        padding: 3px;
    }

</style>

<h1>Lista de Post: </h1>

{{#each posts}}

    <section>
        <h1>{{titulo}}</h1>
        <p>{{conteudo}}</p>
        Criado em: <p>{{createdAt}}</p>
        <a href="/deletar/{{id}}"><button>Deletar</button></a>
        <hr>
    </section>

{{/each}}