{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" method="post">
        <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Titulo: </label>
                <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required minlength="5">

            <label for="slug">Slug: </label>
                <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required minlength="2">

            <label for="descricao">Descrição</label>
                <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required minlength="10">
            
            <label for="conteudo">Conteudo: </label>
                <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea required minlength="20">

            <label for="categoria">Categorias: </label>
                <select name="categoria" class="form-control">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria encontrada</option>
                    {{/each}}
                </select>

            <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>
        </form>
    </div>
</div>