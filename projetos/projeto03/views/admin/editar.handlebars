{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/editar" method="post">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" value="{{categoria.nome}}" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" value="{{categoria.slug}}" class="form-control" pattern="[a-z/s]+$">
            <button type="submit" class="btn btn-success mt-4">Editar Categoria</button>
        </form>
    </div>   
</div>