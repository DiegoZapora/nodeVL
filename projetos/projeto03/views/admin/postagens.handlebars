<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>
<a href="/admin"><button class="btn btn-success">Home Admin</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h2>Titulo: {{titulo}}</h2>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small> <br>
            <small>Criação: {{data}}</small> <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar Postagem</button></a><br>
            <form action="/admin/postagens/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada.</h4>
{{/each}}