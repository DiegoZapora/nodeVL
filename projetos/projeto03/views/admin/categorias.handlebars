<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
<a href="/admin"><button class="btn btn-success">Home Admin</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <p>{{nome}}</p>
            <small>Slug: {{slug}}</small> <br>
            <small>Criação: {{date}}</small> <br>
            <a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}