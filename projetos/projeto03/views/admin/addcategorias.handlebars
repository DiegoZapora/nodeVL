{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post" id="formCategoria">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" pattern="[a-z/s]+$">
            <button type="submit" class="btn btn-success mt-2">Criar Categoria</button>
        </form>
    </div>   
</div>